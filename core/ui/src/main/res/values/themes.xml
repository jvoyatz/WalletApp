<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Wallet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark_blue_800</item>
        <item name="colorPrimaryVariant">@color/dark_blue_900</item>
        <item name="colorSecondary">@color/veraman_500</item>
        <item name="colorSecondaryVariant">@color/veraman_600</item>

        <item name="android:colorBackground">@color/dark_blue_50</item>
        <item name="colorSurface">@color/dark_blue_50</item>
        <item name="colorPrimarySurface">?attr/colorPrimaryVariant</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorPrimaryVariant</item>
        <item name="colorFavorite">@color/orange_500</item>
        <item name="colorError">@color/red_400</item>
        <item name="colorSuccess">@color/green_500</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/white</item>

        <item name="scrimBackground">@color/white_50_alpha_060</item>

        <!--<item name="android:navigationBarColor">@color/black_900_alpha_020</item>-->
        <!--<item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>-->
        <!--<item name="elevationOverlayEnabled">true</item>-->

        <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar.PrimarySurface</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
    </style>

    <style name="Theme.Wallet" parent="Base.Theme.Wallet" />

    <style name="SplashTheme.Wallet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
        <item name="android:windowBackground">@mipmap/ic_launcher</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>